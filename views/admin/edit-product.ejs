<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="<%= edition ? '/admin/edit-product' : '/admin/add-product' %>" method="POST">
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" value="<%= edition ? product.title : '' %>" id="title">
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" value="<%= edition ? product.imageUrl : '' %>" id="imageUrl">
            </div>
            <div class="form-control">
                <label for="price">Price</label>
                <input type="number" name="price" value="<%= edition ? product.price : '' %>" id="price" step="0.01">
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="5"><%= edition ? product.description : '' %></textarea>
            </div>

            <button class="btn" type="submit"><%= edition ? 'Edit product' : 'Add Product' %></button>
						<input type="hidden" name="id" value="<%= edition ? product.id : '' %>">
        </form>
    </main>
<%- include('../includes/end.ejs') %>